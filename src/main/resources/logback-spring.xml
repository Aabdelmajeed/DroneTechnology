<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%X{traceId},%X{spanId}] %magenta([%thread]) %highlight(%-5level)  %logger{36}.%M - %msg%n

            </pattern>
        </encoder>
    </appender>

    <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>DroneBatterHistory/batteryHistory.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="DroneLogger" level="INFO">
        <appender-ref ref="FILE" />
    </logger>
    <root level="INFO">
        <appender-ref ref="ASYNCSTDOUT"/>
    </root>

</configuration>
